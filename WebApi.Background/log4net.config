<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4netLog4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<log4net>
		<!--控制台前台显示日志-->
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<!--<mapping>
				<level value="ERROR" />
				<param name="foreColor" value="Red, HighIntensity" />
			</mapping>
			<mapping>
				<param name="level" value="Info" />
				<param name="foreColor" value="Green" />
			</mapping>-->
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %m%n" />
			</layout>
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="Info" />
				<param name="LevelMax" value="Fatal" />
			</filter>
		</appender>
		<!--文件日志附加介质-->
		<appender name="FileAppender" type="log4net.Appender.FileAppender">
			<!--路径-->
			<param name="File" value="log/" />
			<!--是否是向文件中追加日志-->
			<param name="AppendToFile" value="true" />
			<!--文件编码-->
			<param name="Encoding" value="UTF-8" />
			<!--布局-->
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %m%n" />
			</layout>
		</appender>
		<!--信息日志附加介质-->
		<appender name="InfoRollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<!--路径-->
			<param name="File" value="log/info/" />
			<!--是否是向文件中追加日志-->
			<param name="AppendToFile" value="true" />
			<!--文件最多保留天数-->
			<param name="MaxSizeRollBackups" value="365" />
			<!--文件最大限制-->
			<!--<param name="MaximumFileSize" value="5MB" />-->
			<!--文件编码-->
			<param name="Encoding" value="UTF-8" />
			<!--文件名是否是固定不变的-->
			<param name="StaticLogFileName" value="false" />
			<!--文件名格式为:2008-08-31.txt-->
			<param name="DatePattern" value="yyyy-MM-dd.'txt'" />
			<!--根据日期滚动-->
			<param name="RollingStyle" value="Date" />
			<!--布局-->
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %m%n" />
			</layout>
		</appender>
		<!--错误日志附加介质-->
		<appender name="ErrorRollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<!--路径-->
			<param name="File" value="log/error/" />
			<!--是否是向文件中追加日志-->
			<param name="AppendToFile" value="true" />
			<!--文件最多保留天数-->
			<param name="MaxSizeRollBackups" value="365" />
			<!--文件最大限制-->
			<!--<param name="MaximumFileSize" value="5MB" />-->
			<!--文件编码-->
			<param name="Encoding" value="UTF-8" />
			<!--文件名是否是固定不变的-->
			<param name="StaticLogFileName" value="false" />
			<!--文件名格式为:2008-08-31.txt-->
			<param name="DatePattern" value="yyyy-MM-dd.'txt'" />
			<!--根据日期滚动-->
			<param name="RollingStyle" value="Date" />
			<!--布局-->
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %m%n" />
			</layout>
		</appender>
		<root>
			<!--(高) OFF > FATAL > ERROR > WARN > INFO > DEBUG > ALL (低)-->
			<level value="ALL" />
			<!--控制台控制显示日志-->
			<appender-ref ref="ConsoleAppender" />
			<!--文件记录日志-->
			<appender-ref ref="FileAppender" />
		</root>
		<!--信息日志类 -->
		<logger name="LogInfo">
			<!-- 定义记录的日志级别-->
			<level value="ALL" />
			<!-- 记录到什么介质中-->
			<appender-ref ref="InfoRollingFileAppender" />
			<!--控制台控制显示日志-->
			<appender-ref ref="ConsoleAppender" />
		</logger>
		<!--错误日志类-->
		<logger name="LogError">
			<!-- 定义记录的日志级别-->
			<level value="ALL" />
			<!-- 记录到什么介质中-->
			<appender-ref ref="ErrorRollingFileAppender" />
			<!--控制台控制显示日志-->
			<appender-ref ref="ConsoleAppender" />
		</logger>
	</log4net>
</configuration>
